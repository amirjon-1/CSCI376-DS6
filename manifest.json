{
    "manifest_version": 3,
    "name": "Descriptify",
    "description": "This extension gives back descriptions of images",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
        }
    },
    "content_scripts": [
        {
          "js": ["scripts/script.js"],
          "matches": ["<all_urls>"]
        }
      ]
  }